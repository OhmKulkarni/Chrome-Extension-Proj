# Chrome Extension Storage Configuration Examples
# Copy one of these configurations to your .env file

# ===================================================================
# INDEXEDDB PRIMARY (Default - Recommended for Production)
# ===================================================================
VITE_PRIMARY_STORAGE=indexeddb
VITE_ENABLE_STORAGE_FALLBACK=true
VITE_MAX_RECORDS_PER_TABLE=10000
VITE_MAX_AGE_DAYS=30
VITE_PRUNE_INTERVAL_HOURS=24
VITE_ENABLE_STORAGE_LOGS=false
VITE_ENABLE_PERFORMANCE_METRICS=false

# ===================================================================
# SQLITE PRIMARY (For SQL Query Requirements)
# ===================================================================
# VITE_PRIMARY_STORAGE=sqlite
# VITE_ENABLE_STORAGE_FALLBACK=true
# VITE_MAX_RECORDS_PER_TABLE=10000
# VITE_MAX_AGE_DAYS=30
